{
    "Variables": {
        "tabbarColor": "darkGray",
        "buttonTitleColor": [13, 107, 180, 1.0],
        "buttonTitieColorHighlighted": "magenta",
        "font": ["italic", 22]
    },
    "Phone": {
        "UINavigationBar": {
            "tintColor": "gray"
        }
    },
    "Pad": {
        "UINavigationBar": {
            "backgroundImage:default": "background.png"
        }
    },

    "UITabBar": {
        "tintColor": "$tabbarColor",
        "selectedImageTintColor": "blue",
        "UITabBarItem": {
            "titleTextAttributes:normal": {"textColor": "lightGray"},
            "titleTextAttributes:selected": {"textColor": "white"}
        },
        "UILabel": {
            "backgroundColor": "clear"
        }
    },
    "UIToolbar": {
        "tintColor": "darkGray",
        "backgroundImage:bottom:default": "background"
    },
    "UISSCustomView": {
        "debugBorderColor": "red",
        "image": "background.png",
        "backgroundColor": "gray",
        "backgroundMargin": 20,
        "UIImageView": {
            "backgroundColor": ["lightGray", 0.2]
        }
    },
    "UILabel": {
        "Phone": {
            "textColor": "blue"
        },
        "Pad": {
            "textColor": "orange",
            "backgroundColor": "green"
        }
    },
    "UISSCustomContainerView": {
        "backgroundColor": ["#8899ff", 0.5]
    },
    "@Controllers": {
        "UISSDemoSecondViewController": {
            "UILabel": {
                "textColor": "white",
                "backgroundColor": "black"
            },
            "UISSCustomContainerView": {
                "debugBorderColor": "black",
                "UILabel": {
                    "backgroundColor": "white",
                    "textColor": "black"
                }
            }
        },
        "UISSDemoFirstViewController": {
            "UIButton": {
                "titleColor:normal": "$buttonTitleColor",
                "titleColor:highlighted": "$buttonTitieColorHighlighted",
                "backgroundImage:highlighted": "background",
                "UILabel": {
                    "backgroundColor": "clear",
                    "font": 14
                }
            },
            "UILabel": {
                "textColor": ["white", 0.75],
                "backgroundColor": "#334455",
                "font": ["Cochin-Italic", 28]
            }
        }
    }
}